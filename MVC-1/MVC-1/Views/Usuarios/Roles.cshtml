@model MVC_1.Models.ViewModels.VistaUsuario
@{
    ViewBag.Title = "Roles";
}

<h2>Roles para Usuario: @Model.Nombre</h2>

<p>
    @Html.ActionLink("Agregar Roles", "agregarroles", new { UsuarioID=Model.UsuarioID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Volver a Usuario", "Index",new { },new { @class = "btn btn-info" })




</p>
<table class="table">
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].Nombre)
            </td>

            <td>
                @Html.ActionLink("Borrar", "Borrar", new { UsuarioID = Model.UsuarioID, RoleID = Model.Roles[i].RoleID })
            </td>
        </tr>
    }

</table>
