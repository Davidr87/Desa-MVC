@model IEnumerable<MVC_1.Models.ViewModels.VistaUsuario>

@{
    ViewBag.Title = "Index";
}

<h2>Permisos de Administrador</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Roles", "Roles", new { UsuarioID = item.UsuarioID }) |
        </tr>
    }

</table>
